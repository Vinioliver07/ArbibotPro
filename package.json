{
  "name": "arbibot-contracts",
  "version": "1.0.0",
  "description": "Contrato inteligente otimizado para arbitragem com flash loans",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:performance": "npx hardhat test test/PerformanceTest.js --reporter spec",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "deploy:amoy": "npx hardhat run scripts/deploy-amoy.js --network amoy",
    "deploy:polygon": "npx hardhat run scripts/deploy-amoy.js --network polygon",
    "test:amoy": "npx hardhat run scripts/test-deployment.js --network amoy",
    "verify:amoy": "npx hardhat verify --network amoy",
    "verify:polygon": "npx hardhat verify --network polygon",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "flatten": "npx hardhat flatten",
    "start:bot": "node scripts/monitor-arbitrage.js",
    "start:api": "node backend/api.py",
    "start:frontend": "cd frontend && npm start",
    "start:all": "concurrently \"npm run start:api\" \"npm run start:frontend\" \"npm run start:bot\"",
    "setup": "npm install && cd frontend && npm install",
    "logs:clear": "rm -rf logs/* || true",
    "logs:tail": "tail -f logs/arbitrage.log",
    "logs:errors": "tail -f logs/errors.log",
    "analyze:performance": "node scripts/analyze-performance.js",
    "backup:logs": "tar -czf backups/logs-$(date +%Y%m%d-%H%M%S).tar.gz logs/",
    "health:check": "node scripts/health-check.js",
    "optimize:contracts": "npx hardhat run scripts/optimize-contracts.js",
    "simulation:run": "SIMULATION_MODE=true node scripts/monitor-arbitrage.js",
    "start:local": "node scripts/start-local-bot.js",
    "start:local:fast": "NODE_ENV=production node scripts/start-local-bot.js",
    "start:local:debug": "NODE_ENV=development DEBUG=true node scripts/start-local-bot.js",
    "setup:local": "cp env.local.example .env && npm install",
    "check:local": "node scripts/start-local-bot.js --check-only",
    "test:local": "NODE_ENV=test node scripts/start-local-bot.js --test-mode",
    "monitor:local": "node scripts/start-local-bot.js --monitor-only",
    "logs:local": "tail -f logs/arbitrage.log",
    "logs:local:errors": "tail -f logs/errors.log",
    "clean:local": "rm -rf logs/* cache/*",
    "backup:local": "tar -czf backups/local-$(date +%Y%m%d-%H%M%S).tar.gz logs/ cache/ .env",
    "performance:test": "node scripts/test-performance.js",
    "gas:optimize": "node scripts/optimize-gas.js",
    "network:test": "node scripts/test-network.js",
    "test:amoy:local": "node scripts/test-amoy-local.js",
    "deploy:amoy:v2": "npx hardhat run scripts/deploy-amoy-v2.js --network amoy",
    "deploy:amoy:robust": "npx hardhat run scripts/deploy-amoy-v2-robust.js --network amoy",
    "deploy:amoy:v2:robust": "npx hardhat run scripts/deploy-amoy-v2-robust.js --network amoy",
    "test:bot:integration": "node scripts/test-bot-integration.js",
    "bot:start": "node scripts/monitor-arbitrage.js",
    "bot:test": "node scripts/test-bot-integration.js",
    "bot:logs": "tail -f logs/arbitrage.log",
    "bot:logs:errors": "tail -f logs/errors.log",
    "bot:status": "node scripts/health-check.js",
    "bot:stop": "pkill -f 'monitor-arbitrage.js' || true",
    "bot:setup": "node scripts/setup-bot.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.12"
  },
  "dependencies": {
    "@aave/core-v3": "^1.19.3",
    "@openzeppelin/contracts": "^5.0.2",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.6.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "winston": "^3.17.0",
    "ws": "^8.14.2"
  },
  "keywords": [
    "hardhat",
    "ethereum",
    "polygon",
    "arbitrage",
    "flashloan",
    "defi",
    "bot",
    "local",
    "performance"
  ],
  "author": "",
  "license": "MIT"
}
